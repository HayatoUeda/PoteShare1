<div class="container">
  <h2>登録済みルーム一覧</h2>
  <div class="table">
    <table>
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>住所</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td>
              <%= attachment_image_tag room, :image, format: 'jpeg', size: "200x100", fallback: "no_image.jpg"%>
            </td>
            <td><%= link_to room.name, room_path(room.id) %></td>
            <td><%= room.room_introduction %></td>
            <td><%= room.fee %></td>
            <td><%= room.address %></td>
            <td><%= room.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
